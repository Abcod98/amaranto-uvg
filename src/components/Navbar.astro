<style>
  /* Variables CSS - Paleta Amaranto */
  :root {
    --nav-height: 70px;
    --nav-height-compact: 60px;
    --purple-dark: #6B2D5C;
    --purple-medium: #8B4789;
    --purple-wine: #4A1942;
    --purple-light: #A855A3;
    --fuchsia: #E879F9;
    --purple-soft: #C084FC;
    --violet: #A855F7;
    --text-dark: #333;
    --transition: 0.3s ease;
  }
  
  /* Navbar */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(107, 45, 92, 0.1);
    z-index: 1000;
    transition: all var(--transition);
  }
  
  .navbar.scrolled {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 2px 20px rgba(107, 45, 92, 0.15);
    border-bottom-color: rgba(107, 45, 92, 0.15);
  }
  
  .navbar.scrolled .nav-container {
    height: var(--nav-height-compact);
  }
  
  .navbar.scrolled .logo-circle {
    width: 36px;
    height: 36px;
    font-size: 1.1rem;
  }
  
  .navbar.scrolled .brand-name {
    font-size: 1.15rem;
  }
  
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: var(--nav-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: height var(--transition);
  }
  
  /* Brand */
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    cursor: pointer;
    z-index: 1001;
    position: relative;
  }
  
  .logo-circle {
    width: 42px;
    height: 42px;
    background: linear-gradient(135deg, var(--purple-dark), var(--purple-medium));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.25rem;
    box-shadow: 0 2px 8px rgba(107, 45, 92, 0.2);
    transition: all var(--transition);
  }
  
  .nav-brand:hover .logo-circle {
    transform: rotate(-5deg) scale(1.05);
  }
  
  .brand-info {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .brand-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--purple-dark);
    transition: font-size var(--transition);
  }
  
  .brand-location {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--purple-medium);
    opacity: 0.9;
  }
  
  /* Desktop Menu */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .nav-item {
    position: relative;
  }
  
  .nav-link {
    background: none;
    border: none;
    color: var(--text-dark);
    font-weight: 500;
    font-size: 0.95rem;
    cursor: pointer;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--purple-dark);
  }
  
  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--purple-dark), var(--fuchsia));
    border-radius: 2px;
  }
  
  .nav-cta {
    background: linear-gradient(135deg, var(--purple-dark), var(--purple-medium));
    color: white !important;
    padding: 0.65rem 1.5rem;
    border-radius: 30px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    transition: all var(--transition);
    box-shadow: 0 2px 12px rgba(107, 45, 92, 0.25);
  }
  
  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(168, 85, 163, 0.3);
    background: linear-gradient(135deg, var(--purple-wine), var(--purple-dark));
  }
  
  .nav-cta::after {
    display: none;
  }
  
  .cta-icon {
    width: 18px;
    height: 18px;
    stroke-width: 2;
  }
  
  .nav-whatsapp {
    background: linear-gradient(135deg, #25D366, #128C7E);
    color: white !important;
    padding: 0.65rem 1.25rem;
    border-radius: 30px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    transition: all var(--transition);
    box-shadow: 0 2px 12px rgba(37, 211, 102, 0.25);
  }
  
  .nav-whatsapp:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
  }
  
  .nav-whatsapp::after {
    display: none;
  }
  
  .whatsapp-icon {
    width: 18px;
    height: 18px;
  }
  
  /* Mobile Toggle */
  .nav-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--text-dark);
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
    position: relative;
  }
  
  .hamburger-line {
    width: 25px;
    height: 3px;
    background: var(--text-dark);
    margin: 3px 0;
    transition: 0.3s;
    display: block;
  }
  
  .nav-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(-45deg) translate(-5px, 6px);
  }
  
  .nav-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  
  .nav-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(45deg) translate(-5px, -6px);
  }
  
  /* Progress Bar */
  .scroll-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--purple-dark), var(--fuchsia), var(--violet));
    transition: width 0.1s ease;
    border-radius: 0 2px 2px 0;
  }
  
  /* Overlay */
  .nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(74, 25, 66, 0.5);
    backdrop-filter: blur(4px);
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition);
    z-index: 998;
  }
  
  .nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  
  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: min(400px, 90vw);
    height: 100vh;
    background: white;
    box-shadow: 4px 0 30px rgba(107, 45, 92, 0.15);
    z-index: 999;
    transition: left var(--transition);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }
  
  .mobile-menu.open {
    left: 0;
  }
  
  .menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(107, 45, 92, 0.1);
    background: linear-gradient(135deg, rgba(107, 45, 92, 0.05), rgba(232, 121, 249, 0.05));
  }
  
  .menu-header h2 {
    font-size: 1.25rem;
    color: var(--purple-dark);
    margin: 0;
  }
  
  .close-btn {
    background: none;
    border: none;
    color: #666;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .close-btn:hover {
    background: rgba(107, 45, 92, 0.1);
    color: var(--purple-dark);
  }
  
  .close-btn svg {
    width: 20px;
    height: 20px;
    stroke-width: 2;
  }
  
  .menu-nav {
    padding: 1rem 0;
    flex: 1;
  }
  
  .menu-item {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: none;
    border: none;
    border-bottom: 1px solid rgba(107, 45, 92, 0.05);
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    text-decoration: none;
    color: var(--text-dark);
    opacity: 0;
    animation: slideInLeft 0.3s ease forwards;
  }
  
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .mobile-menu.open .menu-item:nth-child(1) { animation-delay: 0.05s; }
  .mobile-menu.open .menu-item:nth-child(2) { animation-delay: 0.1s; }
  .mobile-menu.open .menu-item:nth-child(3) { animation-delay: 0.15s; }
  .mobile-menu.open .menu-item:nth-child(4) { animation-delay: 0.2s; }
  
  .menu-item:hover {
    background: rgba(107, 45, 92, 0.05);
  }
  
  .menu-item.active {
    background: linear-gradient(90deg, rgba(107, 45, 92, 0.1), transparent);
    border-left: 4px solid var(--purple-dark);
  }
  
  .item-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(107, 45, 92, 0.1), rgba(232, 121, 249, 0.1));
    border-radius: 10px;
    color: var(--purple-dark);
    flex-shrink: 0;
  }
  
  .item-icon svg {
    width: 20px;
    height: 20px;
    stroke-width: 2;
  }
  
  .menu-item.active .item-icon {
    background: linear-gradient(135deg, var(--purple-dark), var(--purple-medium));
    color: white;
  }
  
  .item-label {
    flex: 1;
    font-weight: 500;
    font-size: 1.05rem;
  }
  
  .item-arrow {
    width: 18px;
    height: 18px;
    color: #999;
    stroke-width: 2;
    transition: transform 0.2s ease;
  }
  
  .menu-item:hover .item-arrow {
    transform: translateX(4px);
  }
  
  .menu-actions {
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    border-top: 1px solid rgba(107, 45, 92, 0.1);
  }
  
  .action-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
    text-decoration: none;
    color: white;
  }
  
  .action-btn svg {
    width: 20px;
    height: 20px;
    stroke-width: 2;
    flex-shrink: 0;
  }
  
  .action-btn.primary {
    background: linear-gradient(135deg, var(--purple-dark), var(--purple-medium));
  }
  
  .action-btn.whatsapp {
    background: linear-gradient(135deg, #25D366, #128C7E);
  }
  
  .action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }
  
  .action-title {
    font-weight: 600;
    font-size: 1rem;
  }
  
  .action-subtitle {
    font-size: 0.85rem;
    opacity: 0.9;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .nav-menu {
      gap: 1.5rem;
    }
  }
  
  @media (max-width: 860px) {
    .nav-menu {
      display: none;
    }
    
    .nav-toggle {
      display: block;
    }
    
    .nav-container {
      height: 65px;
    }
    
    .navbar.scrolled .nav-container {
      height: 55px;
    }
    
    .mobile-menu {
      width: min(320px, 85vw);
    }
  }
  
  @media (max-width: 480px) {
    .mobile-menu {
      width: min(280px, 85vw);
    }
  }
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.querySelector('.navbar') as HTMLElement;
    const navToggle = document.querySelector('.nav-toggle') as HTMLButtonElement;
    const mobileMenu = document.querySelector('.mobile-menu') as HTMLElement;
    const navOverlay = document.querySelector('.nav-overlay') as HTMLElement;
    const closeBtn = document.querySelector('.close-btn') as HTMLButtonElement;
    const navLinks = document.querySelectorAll('.nav-link') as NodeListOf<HTMLAnchorElement>;
    const menuItems = document.querySelectorAll('.menu-item') as NodeListOf<HTMLAnchorElement>;
    const actionBtns = document.querySelectorAll('.action-btn') as NodeListOf<HTMLAnchorElement>;
    const scrollProgress = document.querySelector('.scroll-progress') as HTMLElement;
    
    function toggleMobileMenu() {
      const isOpen = mobileMenu?.classList.toggle('open');
      navToggle?.classList.toggle('active');
      navOverlay?.classList.toggle('active');
      navToggle?.setAttribute('aria-expanded', String(isOpen));
      
      if (isOpen) {
        document.body.style.overflow = 'hidden';
      } else {
        document.body.style.overflow = '';
      }
    }
    
    function closeMobileMenu() {
      mobileMenu?.classList.remove('open');
      navToggle?.classList.remove('active');
      navOverlay?.classList.remove('active');
      navToggle?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
    
    navToggle?.addEventListener('click', toggleMobileMenu);
    closeBtn?.addEventListener('click', closeMobileMenu);
    navOverlay?.addEventListener('click', closeMobileMenu);
    
    // Manejar clicks en links del menú desktop
    navLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        const href = link.getAttribute('href');
        if (href?.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const navHeight = navbar?.offsetHeight || 70;
            const offsetTop = targetElement.offsetTop - navHeight;
            window.scrollTo({
              top: offsetTop,
              behavior: 'smooth'
            });
          }
        }
      });
    });
    
    // Manejar clicks en items del menú móvil
    menuItems.forEach(item => {
      item.addEventListener('click', (e) => {
        const href = item.getAttribute('href');
        if (href?.startsWith('#')) {
          e.preventDefault();
          closeMobileMenu();
          
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const navHeight = navbar?.offsetHeight || 70;
            const offsetTop = targetElement.offsetTop - navHeight;
            window.scrollTo({
              top: offsetTop,
              behavior: 'smooth'
            });
          }
        }
      });
    });
    
    // Manejar clicks en botones de acción
    actionBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const href = btn.getAttribute('href');
        if (href?.startsWith('#')) {
          e.preventDefault();
          closeMobileMenu();
          
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            const navHeight = navbar?.offsetHeight || 70;
            const offsetTop = targetElement.offsetTop - navHeight;
            window.scrollTo({
              top: offsetTop,
              behavior: 'smooth'
            });
          }
        } else {
          closeMobileMenu();
        }
      });
    });
    
    // Cerrar con tecla Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenu?.classList.contains('open')) {
        closeMobileMenu();
      }
    });
    
    // Efecto de scroll
    window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop > 50) {
        navbar?.classList.add('scrolled');
      } else {
        navbar?.classList.remove('scrolled');
      }
      
      const windowHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
      const scrolled = (scrollTop / windowHeight) * 100;
      if (scrollProgress) {
        scrollProgress.style.width = `${scrolled}%`;
        scrollProgress.setAttribute('aria-valuenow', String(Math.round(scrolled)));
      }
    });
    
    // Active link detection
    const sections = document.querySelectorAll('section[id]');
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '-70px 0px -70% 0px'
    };
    
    const sectionObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.id;
          
          navLinks.forEach(link => link.classList.remove('active'));
          const activeDesktopLink = document.querySelector(`.nav-link[data-section="${sectionId}"]`);
          activeDesktopLink?.classList.add('active');
          
          menuItems.forEach(item => item.classList.remove('active'));
          const activeMobileItem = document.querySelector(`.menu-item[data-section="${sectionId}"]`);
          activeMobileItem?.classList.add('active');
        }
      });
    }, observerOptions);
    
    sections.forEach(section => sectionObserver.observe(section));
  });
</script>