---
// ProductCard.astro - Componente reutilizable para productos
export interface Props {
  id: string;
  name: string;
  description: string;
  price: number;
  image: string;
  weight?: string;
  discount?: number;
  badge?: string;
  whatsappNumber: string;
}

const { 
  id,
  name, 
  description, 
  price, 
  image, 
  weight = "500g",
  discount,
  badge,
  whatsappNumber
} = Astro.props;

const finalPrice = discount ? price - (price * discount / 100) : price;
const whatsappMessage = encodeURIComponent(
  `Hola! Me interesa el producto: *${name}* (${weight})\nPrecio: Q${finalPrice.toFixed(2)}\n\n¿Está disponible?`
);
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<article class="product-card" itemscope itemtype="https://schema.org/Product">
  <div class="product-image-container">
    {badge && (
      <span class="product-badge">{badge}</span>
    )}
    {discount && (
      <span class="product-discount">-{discount}%</span>
    )}
    <img 
      src={image} 
      alt={name}
      class="product-image"
      itemprop="image"
      loading="lazy"
      width="300"
      height="300"
    />
    <div class="product-overlay">
      <button class="quick-view-btn" aria-label={`Vista rápida de ${name}`}>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        Vista Rápida
      </button>
    </div>
  </div>
  
  <div class="product-content">
    <div class="product-header">
      <h3 class="product-name" itemprop="name">{name}</h3>
      <span class="product-weight">{weight}</span>
    </div>
    
    <p class="product-description" itemprop="description">{description}</p>
    
    <div class="product-footer">
      <div class="product-price-container" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        {discount ? (
          <>
            <span class="product-price-old">Q{price.toFixed(2)}</span>
            <span class="product-price" itemprop="price">
              Q{finalPrice.toFixed(2)}
            </span>
            <meta itemprop="price" content={finalPrice.toString()} />
          </>
        ) : (
          <>
            <span class="product-price" itemprop="price">
              Q{price.toFixed(2)}
            </span>
            <meta itemprop="price" content={price.toString()} />
          </>
        )}
        <meta itemprop="priceCurrency" content="GTQ" />
        <meta itemprop="availability" content="https://schema.org/InStock" />
      </div>
      
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="whatsapp-btn"
        aria-label={`Comprar ${name} por WhatsApp`}
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="whatsapp-icon">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        Comprar
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }
  
  .product-image-container {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }
  
  .product-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.1);
  }
  
  .product-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: linear-gradient(135deg, #2d5016, #3d6b1f);
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .product-discount {
    position: absolute;
    top: 15px;
    right: 15px;
    background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    z-index: 2;
  }
  
  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(45, 80, 22, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }
  
  .product-card:hover .product-overlay {
    opacity: 1;
  }
  
  .quick-view-btn {
    background: white;
    color: #2d5016;
    border: none;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    transform: translateY(20px);
  }
  
  .product-card:hover .quick-view-btn {
    transform: translateY(0);
  }
  
  .quick-view-btn:hover {
    background: #ffd700;
    transform: scale(1.05);
  }
  
  .quick-view-btn svg {
    width: 18px;
    height: 18px;
    stroke-width: 2.5;
  }
  
  .product-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }
  
  .product-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 0.5rem;
  }
  
  .product-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2d5016;
    margin: 0;
    line-height: 1.3;
  }
  
  .product-weight {
    background: #f0f2f5;
    color: #666;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
    white-space: nowrap;
  }
  
  .product-description {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  
  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #f0f2f5;
  }
  
  .product-price-container {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .product-price-old {
    color: #999;
    font-size: 0.9rem;
    text-decoration: line-through;
  }
  
  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d5016;
  }
  
  .whatsapp-btn {
    background: linear-gradient(135deg, #25D366, #128C7E);
    color: white;
    text-decoration: none;
    padding: 12px 20px;
    border-radius: 25px;
    font-weight: 600;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }
  
  .whatsapp-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
    background: linear-gradient(135deg, #128C7E, #25D366);
  }
  
  .whatsapp-icon {
    width: 20px;
    height: 20px;
  }
  
  @media (max-width: 768px) {
    .product-content {
      padding: 1.25rem;
    }
    
    .product-name {
      font-size: 1.1rem;
    }
    
    .product-description {
      font-size: 0.9rem;
    }
    
    .product-price {
      font-size: 1.3rem;
    }
    
    .whatsapp-btn {
      padding: 10px 16px;
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 480px) {
    .product-footer {
      flex-direction: column;
      align-items: stretch;
    }
    
    .whatsapp-btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>