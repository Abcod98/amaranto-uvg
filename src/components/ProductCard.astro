<script>
  // Funcionalidad del modal de vista rápida
  document.addEventListener('DOMContentLoaded', function() {
    const quickViewButtons = document.querySelectorAll('.quick-view-btn');
    
    quickViewButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const productId = this.getAttribute('data-product-id');
        const productCard = this.closest('.product-card');
        
        if (!productCard) return;
        
        // Obtener datos del producto
        const productName = productCard.querySelector('.product-name')?.textContent || '';
        const productDescription = productCard.querySelector('.product-description')?.textContent || '';
        const productPrice = productCard.querySelector('.product-price')?.textContent || '';
        const productWeight = productCard.querySelector('.product-weight')?.textContent || '';
        const productImage = productCard.querySelector('.product-image')?.getAttribute('src') || '';
        const whatsappBtn = productCard.querySelector('.whatsapp-btn')?.getAttribute('href') || '';
        
        // Crear modal
        createQuickViewModal({
          id: productId,
          name: productName,
          description: productDescription,
          price: productPrice,
          weight: productWeight,
          image: productImage,
          whatsappLink: whatsappBtn
        });
      });
    });
  });
  
