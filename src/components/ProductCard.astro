---
// ProductCard.astro - Componente reutilizable para productos
export interface Props {
  id: string;
  name: string;
  description: string;
  price: number;
  image: string;
  weight?: string;
  discount?: number;
  badge?: string;
  whatsappNumber: string;
}

const { 
  id,
  name, 
  description, 
  price, 
  image, 
  weight = "500g",
  discount,
  badge,
  whatsappNumber
} = Astro.props;

const finalPrice = discount ? price - (price * discount / 100) : price;
const whatsappMessage = encodeURIComponent(
  `Hola! Me interesa el producto: *${name}* (${weight})\nPrecio: Q${finalPrice.toFixed(2)}\n\n¿Está disponible?`
);
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<article class="product-card" itemscope itemtype="https://schema.org/Product">
  <div class="product-image-container">
    {badge && (
      <span class="product-badge">{badge}</span>
    )}
    {discount && (
      <span class="product-discount">-{discount}%</span>
    )}
    <img 
      src={image} 
      alt={name}
      class="product-image"
      itemprop="image"
      loading="lazy"
      width="300"
      height="300"
    />
    <div class="product-overlay">
      <button 
        class="quick-view-btn" 
        data-product-id={id}
        aria-label={`Vista rápida de ${name}`}
      >
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        Vista Rápida
      </button>
    </div>
  </div>
  
  <div class="product-content">
    <div class="product-header">
      <h3 class="product-name" itemprop="name">{name}</h3>
      <span class="product-weight">{weight}</span>
    </div>
    
    <p class="product-description" itemprop="description">{description}</p>
    
    <div class="product-footer">
      <div class="product-price-container" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
        {discount ? (
          <>
            <span class="product-price-old">Q{price.toFixed(2)}</span>
            <span class="product-price" itemprop="price">
              Q{finalPrice.toFixed(2)}
            </span>
            <meta itemprop="price" content={finalPrice.toString()} />
          </>
        ) : (
          <>
            <span class="product-price" itemprop="price">
              Q{price.toFixed(2)}
            </span>
            <meta itemprop="price" content={price.toString()} />
          </>
        )}
        <meta itemprop="priceCurrency" content="GTQ" />
        <meta itemprop="availability" content="https://schema.org/InStock" />
      </div>
      
      <a 
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="whatsapp-btn"
        aria-label={`Comprar ${name} por WhatsApp`}
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="whatsapp-icon">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        Comprar
      </a>
    </div>
  </div>
</article>

<style>
