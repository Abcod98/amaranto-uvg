<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Expandir/contraer tarjetas de características
    const featureCards = document.querySelectorAll('.feature-card');
    
    featureCards.forEach(card => {
      const expandBtn = card.querySelector('.feature-expand');
      
      // Función para toggle del estado expandido
      const toggleExpanded = (e?: Event) => {
        if (e) {
          e.preventDefault();
          e.stopPropagation();
        }
        const isExpanded = card.classList.toggle('expanded');
        if (expandBtn) {
          expandBtn.setAttribute('aria-expanded', isExpanded.toString());
        }
      };
      
      // Click/Touch en el botón para todos los dispositivos
      if (expandBtn) {
        expandBtn.addEventListener('click', toggleExpanded);
        expandBtn.addEventListener('touchend', function(e: Event) {
          e.preventDefault();
          e.stopPropagation();
          toggleExpanded();
        }, { passive: false });
      }
      
      // Touch en toda la tarjeta para móviles (excepto en el botón)
      let touchStartY = 0;
      let touchStartTime = 0;
      
      card.addEventListener('touchstart', function(e: Event) {
        const touchEvent = e as TouchEvent;
        if (touchEvent.touches && touchEvent.touches.length > 0) {
          touchStartY = touchEvent.touches[0].clientY;
          touchStartTime = Date.now();
        }
      }, { passive: true });
      
      card.addEventListener('touchend', function(e: Event) {
        const touchEvent = e as TouchEvent;
        const target = touchEvent.target as HTMLElement;
        
        // No hacer nada si se tocó el botón expand (ya se maneja arriba)
        if (target.closest('.feature-expand')) {
          return;
        }
        
        if (touchEvent.changedTouches && touchEvent.changedTouches.length > 0) {
          const touchEndY = touchEvent.changedTouches[0].clientY;
          const touchEndTime = Date.now();
          const swipeDistance = Math.abs(touchStartY - touchEndY);
          const touchDuration = touchEndTime - touchStartTime;
          
          // Considerar como tap si:
          // - El movimiento es mínimo (< 10px)
          // - La duración es corta (< 500ms)
          if (swipeDistance < 10 && touchDuration < 500) {
            toggleExpanded();
          }
        }
      }, { passive: true });
    });
    
    // Animación de barras de comparación con Intersection Observer
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const animateStats = (entries: IntersectionObserverEntry[]) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const bars = entry.target.querySelectorAll('.stat-bar');
          bars.forEach((bar, index) => {
            if (bar instanceof HTMLElement) {
              setTimeout(() => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                  bar.style.width = width;
                }, 50);
              }, index * 100);
            }
          });
        }
      });
    };
    
    const statsObserver = new IntersectionObserver(animateStats, observerOptions);
    
    document.querySelectorAll('.comparison-item').forEach(item => {
      statsObserver.observe(item);
    });
    
    // Scroll horizontal suave en la comparación (mejor experiencia táctil)
    const comparisonSlider = document.querySelector('.comparison-slider');
    let isDown = false;
    let startX: number = 0;
    let scrollLeft: number = 0;
    
    if (comparisonSlider) {
      comparisonSlider.addEventListener('mousedown', (e: Event) => {
        const mouseEvent = e as MouseEvent;
        isDown = true;
        comparisonSlider.classList.add('active');
        startX = mouseEvent.pageX - (comparisonSlider as HTMLElement).offsetLeft;
        scrollLeft = comparisonSlider.scrollLeft;
      });
      
      comparisonSlider.addEventListener('mouseleave', () => {
        isDown = false;
        comparisonSlider.classList.remove('active');
      });
      
      comparisonSlider.addEventListener('mouseup', () => {
        isDown = false;
        comparisonSlider.classList.remove('active');
      });
      
      comparisonSlider.addEventListener('mousemove', (e: Event) => {
        if (!isDown) return;
        e.preventDefault();
        const mouseEvent = e as MouseEvent;
        const x = mouseEvent.pageX - (comparisonSlider as HTMLElement).offsetLeft;
        const walk = (x - startX) * 2;
        comparisonSlider.scrollLeft = scrollLeft - walk;
      });
    }
    
    // Animación de entrada con Intersection Observer
    const fadeInObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('fade-in-up');
          fadeInObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    // Observar elementos para animación de entrada
    document.querySelectorAll('.feature-card, .comparison-section, .section-cta').forEach(el => {
      fadeInObserver.observe(el);
    });
    
    // Indicador visual de scroll en comparación
    if (comparisonSlider) {
      const updateScrollIndicator = () => {
        const scrollPercentage = (comparisonSlider.scrollLeft / (comparisonSlider.scrollWidth - comparisonSlider.clientWidth)) * 100;
        
        if (scrollPercentage < 10) {
          comparisonSlider.setAttribute('data-scroll-position', 'start');
        } else if (scrollPercentage > 90) {
          comparisonSlider.setAttribute('data-scroll-position', 'end');
        } else {
          comparisonSlider.setAttribute('data-scroll-position', 'middle');
        }
      };
      
      comparisonSlider.addEventListener('scroll', updateScrollIndicator);
      updateScrollIndicator();
    }
    
    // Efecto parallax suave en imagen (solo desktop)
    if (window.innerWidth > 768) {
      const introImage = document.querySelector('.intro-image img');
      
      window.addEventListener('scroll', () => {
        if (introImage instanceof HTMLElement) {
          const scrolled = window.pageYOffset;
          const sectionTop = document.querySelector('#amaranto')?.getBoundingClientRect().top ?? 0;
          
          if (sectionTop < window.innerHeight && sectionTop > -window.innerHeight) {
            const parallaxSpeed = 0.3;
            introImage.style.transform = `scale(1.05) translateY(${scrolled * parallaxSpeed}px)`;
          }
        }
      });
    }
  });
</script>