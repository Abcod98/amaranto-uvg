  </div>
</section>

<style>
  .amaranto-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 50%, #f8f9fa 100%);
    position: relative;
    overflow: hidden;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    background: linear-gradient(135deg, #6B2D5C, #8B4789);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    color: #4A1942;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Contenido introductorio */
  .intro-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 5rem;
  }

  .intro-image {
    position: relative;
  }

  .image-wrapper {
    position: relative;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }

  .image-wrapper:hover img {
    transform: scale(1.05);
  }

  .image-badge {
    position: absolute;
    bottom: 20px;
    left: 20px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 12px 20px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .image-badge svg {
    width: 24px;
    height: 24px;
    stroke: #6B2D5C;
    stroke-width: 2;
  }

  .image-badge span {
    font-weight: 600;
    color: #6B2D5C;
  }

  .intro-text {
    padding: 2rem 2rem;
  }

  .intro-title {
    font-size: 2rem;
    font-weight: 700;
    color: #4A1942;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .intro-description {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .intro-highlights {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
    list-style: none;
    padding: 0;
  }

  .highlight-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 20px;
    background: linear-gradient(135deg, #f3e8f7, #f0e5f5);
    border-radius: 15px;
    border-left: 4px solid #8B4789;
  }

  .highlight-item svg {
    width: 20px;
    height: 20px;
    stroke: #6B2D5C;
    stroke-width: 2;
    flex-shrink: 0;
  }

  .highlight-item span {
    font-weight: 600;
    color: #4A1942;
    font-size: 0.95rem;
  }

  /* Tarjetas de características */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 5rem;
  }

  .feature-card {
    background: white;
    border-radius: 25px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #8B4789, #E879F9);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .feature-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #6B2D5C, #A855A3);
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(107, 45, 92, 0.2);
  }

  .feature-card:hover .feature-icon {
    transform: rotate(5deg) scale(1.1);
    box-shadow: 0 6px 20px rgba(232, 121, 249, 0.4);
  }

  .feature-icon svg {
    width: 28px;
    height: 28px;
    stroke: white;
    stroke-width: 2;
  }

  .feature-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #4A1942;
    margin-bottom: 1rem;
  }

  .feature-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .feature-expand {
    background: transparent;
    border: none;
    color: #8B4789;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
    font-weight: 600;
    padding: 8px 0;
    transition: all 0.3s ease;
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  .feature-expand:hover {
    color: #E879F9;
  }

  .feature-expand:active {
    transform: scale(0.95);
  }

  .feature-expand svg {
    width: 20px;
    height: 20px;
    stroke-width: 2;
    transition: transform 0.3s ease;
  }

  .feature-card.expanded .feature-expand svg {
    transform: rotate(180deg);
  }

  .feature-details {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .feature-card.expanded .feature-details {
    max-height: 300px;
  }

  .feature-details ul {
    list-style: none;
    padding: 1rem 0 0;
    margin: 0;
  }

  .feature-details li {
    padding: 8px 0;
    color: #555;
    font-size: 0.95rem;
    border-bottom: 1px solid #f0f2f5;
  }

  .feature-details li:last-child {
    border-bottom: none;
  }

  /* Comparación nutricional */
  .comparison-section {
    background: linear-gradient(135deg, #4A1942, #6B2D5C);
    border-radius: 30px;
    padding: 3rem;
    margin-bottom: 4rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(107, 45, 92, 0.3);
  }

  .comparison-title {
    font-size: 2rem;
    font-weight: 700;
