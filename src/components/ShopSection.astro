---
// ShopSection.astro - Sección completa de tienda
import ProductCard from './ProductCard.astro';

// Número de WhatsApp del negocio (formato internacional sin +)
const WHATSAPP_NUMBER = "50212345678"; // Cambia esto por tu número real

// Datos de productos (en el futuro esto puede venir de una base de datos o CMS)
const products = [
  {
    id: "granola-gluten-free",
    name: "Granola Gluten Free",
    description: "Granola artesanal 100% libre de gluten elaborada con amaranto de Sololá, frutos secos y miel natural. Perfecta para desayunos saludables y nutritivos.",
    price: 45.00,
    image: "/images/products/granola-gluten-free.jpg",
    weight: "350g",
    badge: "Más Vendido",
    whatsappNumber: WHATSAPP_NUMBER
  },
  {
    id: "granola-avena-integral",
    name: "Granola de Avena Integral",
    description: "Combinación perfecta de avena integral, amaranto reventado, almendras y pasas. Rica en fibra y proteínas para energía duradera.",
    price: 40.00,
    image: "/images/products/granola-avena.jpg",
    weight: "400g",
    whatsappNumber: WHATSAPP_NUMBER
  },
  {
    id: "barras-granola",
    name: "Barras de Granola",
    description: "Prácticas barras de granola con amaranto para llevar a donde quieras. Snack nutritivo ideal para tu día activo. Pack de 6 unidades.",
    price: 35.00,
    image: "/images/products/barras-granola.jpg",
    weight: "6 x 30g",
    badge: "Nuevo",
    whatsappNumber: WHATSAPP_NUMBER
  }
];
---

<section id="tienda" class="shop-section" itemscope itemtype="https://schema.org/Store">
  <div class="container">
    <!-- Header de la sección -->
    <div class="section-header">
      <span class="section-subtitle">Productos Artesanales</span>
      <h2 class="section-title" itemprop="name">Nuestra Línea de Granola</h2>
      <p class="section-description" itemprop="description">
        Granolas artesanales elaboradas con amaranto de Sololá, ingredientes naturales 
        y todo el sabor de Guatemala. Nutrición y energía para tu día a día.
      </p>
    </div>
    
    <!-- Grid de productos -->
    <div class="products-grid">
      {products.map(product => (
        <ProductCard {...product} />
      ))}
    </div>
    
    <!-- Call to action adicional -->
    <div class="shop-cta">
      <div class="cta-content">
        <h3 class="cta-title">¿Necesitas una cantidad mayor?</h3>
        <p class="cta-text">
          Ofrecemos precios especiales para compras al por mayor y entregas a todo Guatemala.
        </p>
        <a 
          href={`https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent('Hola! Me interesa información sobre compras al por mayor.')}`}
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button"
        >
          <svg viewBox="0 0 24 24" fill="currentColor">
