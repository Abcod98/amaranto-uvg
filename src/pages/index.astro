---
// index.astro - Página principal del sitio
import MainLayout from '../layouts/MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import HeroSection from '../components/HeroSection.astro';
import ShopSection from '../components/ShopSection.astro';
---

<MainLayout 
  title="Amaranto Guatemala | Productos Naturales de Sololá - Superalimento Ancestral"
  description="Descubre el amaranto de Sololá, Guatemala. Granos, harinas y productos naturales ricos en proteínas, sin gluten. Envíos a todo el país. Compra por WhatsApp."
  keywords="amaranto guatemala, amaranto sololá, productos de amaranto, grano de amaranto, harina de amaranto, superalimento, proteína vegetal, sin gluten, productos naturales guatemala, alimento ancestral maya"
>
  <Navbar />
  <HeroSection />
  
  <!-- Sección Placeholder para futuras secciones -->
  <section id="amaranto" style="height: 100vh; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center; color: #333;">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #2d5016;">¿Qué es el Amaranto?</h2>
      <p style="font-size: 1.2rem; max-width: 600px;">Próximamente: Información detallada sobre el amaranto y sus beneficios nutricionales.</p>
    </div>
  </section>
  
  <!-- Sección de Tienda -->
  <ShopSection />
  
  <section id="solola" style="height: 100vh; background: #f0f2f5; display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center; color: #333;">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #1a4c96;">Sololá y el Amaranto</h2>
      <p style="font-size: 1.2rem; max-width: 600px;">Próximamente: La historia del cultivo de amaranto en el departamento de Sololá.</p>
    </div>
  </section>
  
  <section id="beneficios" style="height: 100vh; background: #ffffff; display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center; color: #333;">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #2d5016;">Beneficios Nutricionales</h2>
      <p style="font-size: 1.2rem; max-width: 600px;">Próximamente: Información científica sobre los beneficios del amaranto.</p>
    </div>
  </section>
  
  <section id="contacto" style="height: 100vh; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
    <div style="text-align: center; color: #333;">
      <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #8b5a3c;">Contacto</h2>
      <p style="font-size: 1.2rem; max-width: 600px;">Próximamente: Formulario de contacto y información de ubicación.</p>
    </div>
  </section>
</MainLayout>